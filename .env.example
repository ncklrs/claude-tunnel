# Linear API Configuration
# Get your API key from Linear Settings > API > Personal API keys
LINEAR_API_KEY=lin_api_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Webhook secret for validating incoming webhooks
# Generated when you create a webhook in Linear Settings > API > Webhooks
LINEAR_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Label that triggers the agent (default: ai-attempt)
TRIGGER_LABEL=ai-attempt

# Name of the custom field containing the repository reference
REPO_CUSTOM_FIELD_NAME=Repository

# Git Configuration
# Base path where your repositories are cloned (e.g., ~/code or ~/projects)
REPOS_BASE_PATH=~/code

# Path where worktrees will be created for each issue
WORKTREES_PATH=~/worktrees

# Agent Settings
# Maximum number of agents that can run concurrently
MAX_CONCURRENT_AGENTS=1

# Whether to include issue comments in the prompt
INCLUDE_COMMENTS=true

# Agent timeout in milliseconds (default: 30 minutes)
AGENT_TIMEOUT=1800000

# Server Configuration
# Port for the webhook server
PORT=3847

# Recovery Settings
# Automatically clean up orphaned worktrees on startup
AUTO_CLEAN_ORPHANS=false

# Linear Status Mapping
# Status name to set when agent starts working
IN_PROGRESS_STATUS=In Progress

# Status name to set when agent completes
REVIEW_STATUS=In Review

# Logging
# Log level: error, warn, info, debug
LOG_LEVEL=info
